<h1>Edit a New Employee </h1>

<% if @employee.errors.any?  %>
 <div id="error explanation">
 <h2>We found a few errors in your form:</h2>
 <ul>
 <% @employee.errors.full_messages.each do |message| %>
   <li><%= message %></li>
 <% end  %>
 </ul>
<% end  %>

<%= form_for @employee do |f| %>
 <%= f.label :first_name %>
 <%= f.text_field :first_name %>
 <%= f.label :last_name %>
 <%= f.text_field :last_name %>
 <%= f.label :alias %>
 <%= f.text_field :alias %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <%= f.label :office %>
 <%= f.text_field :office %>
 <%= f.label :img_url %>
 <%= f.text_field :img_url %>
 <%= f.collection_select(:dog_id, Dog.all, :id, :name) %> <br>
 
 <%= f.submit %>
 </div>

<%= form_tag @employee, method: "delete" do %>
     <%= submit_tag "Delete" %>
<% end %>

<% end %>