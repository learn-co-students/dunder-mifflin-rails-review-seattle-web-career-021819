<h1>Edit Dog </h1>

<% if @dog.errors.any?  %>
 <div id="error explanation">
 <h2>We found a few errors in your form:</h2>
 <ul>
 <% @dog.errors.full_messages.each do |message| %>
   <li><%= message %></li>
 <% end  %>
 </ul>
<% end  %>

<%= form_for @dog do |f| %>
 <%= f.label :name %>
 <%= f.text_field :name %>
 <%= f.label :breed %>
 <%= f.text_field :breed %>
 <%= f.label :age %>
 <%= f.number_field :age%>
 <%= f.submit %>
 </div>

 <%= form_tag @dog, method: "delete" do %>
      <%= submit_tag "Delete" %>
 <% end %>

<% end %>